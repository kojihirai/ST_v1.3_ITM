# Device Configuration
DEVICE_NAME=lcu
BROKER_IP=192.168.2.1
BROKER_PORT=1883

# Motor Configuration
MOTOR_PWM_FREQUENCY=20000
MOTOR_RPWM_PIN=12
MOTOR_LPWM_PIN=13
MOTOR_REN_PIN=23
MOTOR_LEN_PIN=24
MOTOR_ENABLE_ACTIVE_HIGH=true

# Encoder Configuration
ENCODER_A_PIN=5
ENCODER_B_PIN=6
ENCODER_PULL_UP=true
PULSES_PER_MM=72.0

# Load Cell Configuration
LOAD_CELL_PORT=/dev/ttyUSB0
LOAD_CELL_BAUDRATE=9600
LOAD_CELL_PARITY=E
LOAD_CELL_STOPBITS=1
LOAD_CELL_BYTESIZE=8
LOAD_CELL_TIMEOUT=1.0
LOAD_CELL_SLAVE_ID=1
LOAD_CELL_REGISTER_ADDRESS=0
LOAD_CELL_SCALE_FACTOR=1.0
LOAD_CELL_ZERO_OFFSET=0.0

# Data Logger Configuration
LOG_INTERVAL=0.0002
LOG_BUFFER_SIZE=10000
LOG_FORMAT=csv

# PID Configuration
PID_UPDATE_INTERVAL=0.001
PID_KP=2.0
PID_KI=0.05
PID_KD=0.2
PID_INTEGRAL_LIMIT=50.0
PID_DERIVATIVE_FILTER=0.2

# Homing Configuration
HOMING_SPEED=50
HOMING_TIMEOUT=10.0
MAX_HOMING_RETRIES=3 